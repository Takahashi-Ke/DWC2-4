<div class="container">
  <div class="row">
    <% if user_signed_in? %>

      <%= form_with(url: search_path, method: :get, local: true) do |f| %>
     
        <%= f.text_field :keyword %>
        
        <%= f.select 'range' ,[["User", "1"], ["Book", "2"]], include_blank: "選択" %>
        
        <%= f.select 'search',[["完全一致","perfect_match"], ["前方一致","forward_match"], ["後方一致","backward_match"], ["部分一致","partial_match"]], selected: "perfect_match" %>
        
        <%= f.submit "検索" %>
      
      <% end %>

    <% end %>
  </div>
</div>
